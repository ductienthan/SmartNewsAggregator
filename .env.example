# =============================================================================
# Smart News Aggregator - Environment Variables
# =============================================================================

# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3000

# Database Configuration
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:smartnews123@localhost:5432/smart-news

# Redis Configuration (for BullMQ)
# =============================================================================
# Redis host address
REDIS_HOST=localhost
# Redis port
REDIS_PORT=6379
# Redis password (optional)
REDIS_PASSWORD=

# API Configuration
# =============================================================================
# API version
API_VERSION=v1
# API title for Swagger
API_TITLE=Snag API
# API description for Swagger
API_DESCRIPTION=Smart News Aggregator API
# API version for Swagger
API_VERSION_NUMBER=1.0

# Worker Configuration
# =============================================================================
# Worker queue name
WORKER_QUEUE_NAME=SnagWorker
# Worker port (if running as separate service)
WORKER_PORT=3001

# Development Configuration
# =============================================================================
# Enable debug logging
DEBUG=false
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Production Configuration
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# External Services (if applicable)
# =============================================================================
# News API key (if using external news APIs)
NEWS_API_KEY=your_news_api_key_here
# News API base URL
NEWS_API_BASE_URL=https://newsapi.org/v2

# Security Configuration
# =============================================================================
# JWT secret (for authentication if needed)
JWT_SECRET=your_jwt_secret_here
# JWT expiration time
JWT_EXPIRES_IN=1d

# Monitoring and Logging
# =============================================================================
# Enable request logging
ENABLE_REQUEST_LOGGING=true
# Enable response logging
ENABLE_RESPONSE_LOGGING=false
# Log format (json, simple)
LOG_FORMAT=json

# Docker Configuration (for containerized deployment)
# =============================================================================
# When using Docker Compose, these values are automatically set:
# DATABASE_URL=postgresql://postgres:smartnews123@postgres:5432/smart-news
# REDIS_HOST=redis
# REDIS_PORT=6379
